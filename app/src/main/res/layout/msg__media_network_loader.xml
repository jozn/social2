<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        style="@style/msg_image.peer"
        android:id="@+id/msg_image"
        android:layout_centerInParent="true"
        />

    <FrameLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/chat_media_cancel"
        android:id="@+id/loading_holder"
        >

        <com.mardomsara.social.ui.views.XRawIcon
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/icon_action_btn"
            android:textSize="32dp"
            android:gravity="center"
            android:layout_gravity="center"

            android:text="\uf3ab"
            android:padding="0dp"

            android:textColor="@color/white"
            />
        <!--style="@style/text_ionic.btn"-->
        <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:id="@+id/loading_progress"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:cpv_animAutostart="true"
            app:cpv_indeterminate="true"
            app:cpv_color="@color/white"

            android:layout_centerInParent="true"
            android:visibility="gone"

            />

    </FrameLayout>

</merge>
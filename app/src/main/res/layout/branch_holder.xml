    android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/child_frame_deep"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:visibility="gone"
        >

    </LinearLayout>

    <FrameLayout
        android:id="@+id/default_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"

        ></FrameLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--<attr name="fontPath" format="string" />-->

    <!-- for XTextView -->
    <attr name="xFont" format="enum" >
        <enum name="Iran" value="0" />
        <enum name="IranBold" value="1" />
        <enum name="IranLight" value="2" />
        <enum name="IranMedium" value="3" />
        <enum name="IranUltraLight" value="4" />
    </attr>

    <attr name="xEnableLinker" format="boolean" />

    <!-- For emoji attrs -->
    <attr name="xEnableEmoji" format="boolean"/>
    <attr name="xLimitText" format="integer"/>

    <attr name="xEmojiconSize" format="dimension" /> <!--dep??-->
    <attr name="xEmojiconSizeRatio" format="float" />
    <attr name="xEmojiconAlignment" format="enum">
        <enum name="bottom" value="0" />
        <enum name="baseline" value="1" />
    </attr>
    <attr name="xEmojiconTextStart" format="integer" />
    <attr name="xEmojiconTextLength" format="integer" />
    <attr name="xEmojiconUseSystemDefault" format="boolean" />
    <!-- ======================== -->

    <declare-styleable name="CountView2">
        <attr name="be_fast" format="boolean" />

    </declare-styleable>

    <declare-styleable name="XIcon">
        <attr name="xicon" format="string" />
        <attr name="xiconLeft" format="string" />
        <attr name="xiconRight" format="string" />
        <attr name="xiconSize" format="dimension"/>
        <attr name="xiconText" format="string"/>
        <attr name="xiconColor" format="color"/>
        <attr name="xiconSpace" format="dimension"/>
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="xFont" />
    </declare-styleable>

    <declare-styleable name="XLinkerTextView" >
        <attr name="xEnableLinker" />
        <attr name="xFont" />

    </declare-styleable>

    <declare-styleable name="XTextView" >
        <attr name="xFont" />
        <attr name="xEnableLinker" />
        <attr name="xEnableEmoji" />
        <attr name="xLimitText" />

        <attr name="xEmojiconSize"/>
        <attr name="xEmojiconSizeRatio"/>
        <attr name="xEmojiconAlignment" />
        <attr name="xEmojiconTextStart" />
        <attr name="xEmojiconTextLength" />
        <attr name="xEmojiconUseSystemDefault" />

    </declare-styleable>

    <declare-styleable name="XEditTextView" >
        <attr name="xFont" />
        <attr name="xEnableLinker" />
        <attr name="xEnableEmoji" />
        <attr name="xLimitText" />

        <attr name="xEmojiconSize"/>
        <attr name="xEmojiconAlignment" />
        <attr name="xEmojiconTextStart" />
        <attr name="xEmojiconTextLength" />
        <attr name="xEmojiconUseSystemDefault" />

    </declare-styleable>

    <declare-styleable name="XTopNav" >
        <attr name="xTitle" format="string" />
        <attr name="xLeftTitle" format="string" />
        <attr name="xPostMultiWay" format="boolean" />
    </declare-styleable>

    <attr name="xIconFont" format="enum" >
        <enum name="IonIcons" value="0" />
        <enum name="Material" value="1" />
        <enum name="SimpleLineIcons" value="2" />
        <enum name="Linear" value="3" />
    </attr>

    <declare-styleable name="XRawIcon" >
        <attr name="xIconFont" />
    </declare-styleable>


    <style name="XIconDef">
        <item name="xFont">IranLight</item>
    </style>

    <style name="XTopNavDef">
        <item name="xTitle"> </item>
        <item name="xLeftTitle"> </item>
        <item name="xPostMultiWay">false</item>
    </style>
</resources>